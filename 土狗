name: Auto-Hunter-Clock

on:
  schedule:
    - cron: '*/5 * * * *'  # 每 5 分钟巡逻一次
  workflow_dispatch:        # 支持手动点按钮运行

jobs:
  run-bot:
    runs-on: ubuntu-latest
    steps:
      - name: 1. 拉取仓库代码
        uses: actions/checkout@v2

      - name: 2. 配置 Python 环境
        uses: actions/setup-python@v2
        with:
          python-version: '3.9'

      - name: 3. 安装工具包 (彻底修复报错)
        run: |
          python -m pip install --upgrade pip
          pip install requests

      - name: 4. 执行巡逻脚本
        run: python hunter.py
